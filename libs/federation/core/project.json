{
  "name": "federation-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/federation/core/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["clean-lib"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/federation-core"],
      "options": {
        "project": "libs/federation/core/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/federation/core/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/federation/core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/federation/core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
